<h1><%= t("users.title.sign_in") %></h1>

<%= form_for(:session, :url => sessions_path) do |f| %>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label t("users.title.password") %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit t("users.title.sign_in") %>
  </div>
<% end %>

<p><%= t("views.sessions.new_user") %> <%= link_to t("views.home.sign_up_now"), signup_path %></p>
