<% if signed_in? %>

  <table class="front" summary="For signed-in users">
    <tr>
      <td class="main">
        <h1 class="micropost">What's up?</h1>
        <%= render 'shared/micropost_form' %>
        <%= render 'shared/feed' %>
      </td>
      <td class="sidebar round">
        <%= render 'shared/user_info' %>
        <%= render 'shared/stats' %>
      </td>
    </tr>
  </table>

<% else %>

<h1>Awesomr</h1>
<p>
  This is the home page for the <a href="<%= root_url %>">Awesomr</a>.
</p>

<%= link_to t("views.home.sign_up_now"), signup_path, :class => "signup_button round" %>

<% end %>